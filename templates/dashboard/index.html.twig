<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>

    
    document.querySelector('.add-product').addEventListener('click', function() {
        alert('Open form or modal to add a new product'); 
        // Replace alert with modal opening code when ready
    });
   

    

    const ctx = document.getElementById('overviewChart').getContext('2d');
    const overviewChart = new Chart(ctx, {
        type: 'bar', // Change to 'line' if you want a line chart
        data: {
            labels: ['Total Products', 'Orders Today', 'Pending Orders', 'Completed Orders', 'Total Customers', 'Revenue Today', 'New Signups'],
            datasets: [{
                label: 'Metrics Overview',
                data: [12, 5, 2, 3, 20, 350, 3], // Same numbers as your cards
                backgroundColor: [
                    '#4ade80', '#60a5fa', '#facc15', '#f87171', '#34d399', '#818cf8', '#f472b6'
                ]
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                tooltip: { enabled: true }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });



    const earningsCtx = document.getElementById('earningsChart').getContext('2d');
    const earningsChart = new Chart(earningsCtx, {
        type: 'line', // Line chart for earnings over time
        data: {
            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'], // days of the week
            datasets: [{
                label: 'Earnings ($)',
                data: [100, 150, 120, 200, 180, 250, 300], // example earnings
                borderColor: '#4ade80',
                backgroundColor: 'rgba(74, 222, 128, 0.2)',
                fill: true,
                tension: 0.4 // smooth curve
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: true },
                tooltip: { enabled: true }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });




    document.querySelector('.add-product').addEventListener('click', function() {
        alert('Open form or modal to add a new product'); 
        // Replace alert with modal opening code when ready
    });




    function showSection(id) {
        document.querySelectorAll('.section').forEach(s => s.style.display = 'none');
        document.getElementById(id).style.display = 'block';
    }




</script>
