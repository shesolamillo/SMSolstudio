{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<style>
body {
    font-family: nimala bold, nimala bold;
    background: #5c5c5dff;
    margin: 0;
    padding: 0;
    color: #a1a3a8ff;
}
.sidebar {
    width: 300px;
    height: 100vh;
    background: #464545ff;
    position: fixed;
    top: 0;
    left: 0;
    padding: 20px 0;
    box-shadow: 2px 0 6px rgba(0,0,0,0.05);
    z-index: 10;
}
.sidebar h2 {
    text-align: center;
    margin-bottom: 30px;
    font-size: 2.4em;
    font-weight: 700;
}
.sidebar ul {
    list-style: none;
    padding: 0;
}
.sidebar ul li {
    padding: 14px 22px;
    cursor: pointer;
    transition: background 0.2s;
    font-size: 1.1em; 
    margin-bottom: 10px;
}
.sidebar ul li:hover {
    background: #f3f4f6;
    transform: scale(1.05);
    transition: transform 0.2s;
}
.section h3 {
    font-size: 3.2em;  /* mas dako kaysa default */
    font-weight: 700;  /* mas bug-at */
    margin-bottom: 20px;
    color: #fff; /* optional kung gusto nimo mas contrast sa background */

}


.topbar {
    margin-left: 300px;
    height: 90px;
    background: #292a29ff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    margin-top: 15px; /* ibton gamay pa-ubos */
}
.search-box input {
    padding: 8px 12px;
    border: 1px solid #ccc;
    border-radius: 20px;
    outline: none;
}

.profile {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: url('{{ asset("images/logo.png") }}') center/contain no-repeat;
    box-shadow: 0 0 8px rgba(0,0,0,0.3); /* shadow */
    margin-top: 5px; /* para mosibog gamay pa-ilalom */
    

  
}
.main {
    margin-left: 300px;
    padding: 100px;
    box-sizing: border-box;
    display:flex;
    color: black;
    flex-direction: column;
}
.cards {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    margin-bottom: 30px;
}
.card {
    flex: 1 1 200px;
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0,0,0,0.05);
    text-align: center;
    font-weight: 600;
}
.section {
    display: none;
    margin-bottom: 30px;
}
.product-cards {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
   
}
.product-card {
    flex: 1 1 200px; 
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0,0,0,0.05);
    text-align: center;
    min-width: 200px;
    box-sizing: border-box;
    font-weight: 600;
    text-align: center;
}
.product-image {
    width: 100%;
    height: 120px;
    background: #e5e7eb;
    border-radius: 8px;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: #111827;
}

.report-card .product-image {
    height: 120px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: #111827;
}

.product-actions button:hover {
    opacity: 0.8;
}


.product-actions button {
    padding: 6px 12px;
    border: none;
    border-radius: 6px;
    color: white;
    cursor: pointer;
    font-weight: 600;
    margin-right: 5px;
    transition: opacity 0.2s;
}


.view-details { background: #60a5fa; }
.update-status { background: #34d399; }
.cancel-order { background: #f87171; }


.report-revenue { background: #d1fae5; }
.report-sales { background: #fef3c7; }
.report-top { background: #fee2e2; }
.report-growth { background: #e0e7ff; }

.main-content {
    max-width: 1200px; /* keeps content from stretching too far */
    margin: 0 auto;
}

</style>

